<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".expense_unpaid_card_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/view_expenseCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/view_expense_unpaid_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/view_expenseCheckbox"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/view_expense_unpaid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 characters"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/view_expense_unpaid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/31/99"/>

            <TextView
                android:id="@+id/view_expense_unpaid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:59"
                android:layout_below="@+id/view_expense_unpaid_date"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>